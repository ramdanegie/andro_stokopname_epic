<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:id="@+id/masterProdukPopUp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <TextView
            android:id="@+id/tv_mpNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_view_qtyReal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nama Produk"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_mpBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_mpBarcodeBuka"
            android:text="Barcode"
            android:textSize="10sp"
            android:layout_marginLeft="1dp"

            />

        <TextView
            android:id="@+id/tv_mpBarcodeBuka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_mpNamaProduk"
            android:text="( "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_mpBarcodeTutup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_mpBarcode"
            android:text=" )"
            android:textSize="10sp"

            />

        <ImageView
            android:id="@+id/iv_mpKodeProduk"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_mpNamaProduk"
            android:src="@drawable/ic_turned_in_orange_24dp" />

        <TextView
            android:id="@+id/tv_mpKodeProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mpNamaProduk"
            android:layout_toRightOf="@+id/iv_mpKodeProduk"
            android:text="Kode Produk"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_edit_grey_24dp"

            />

        <ImageView
            android:id="@+id/img_satuan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_mpKodeProduk"
            android:src="@drawable/ic_turned_in_orange_24dp" />

        <TextView
            android:id="@+id/tv_mpSatuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mpKodeProduk"
            android:layout_toRightOf="@+id/img_satuan"
            android:text="Satuan "
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/img_detailJenis"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_mpSatuan"
            android:src="@drawable/ic_turned_in_orange_24dp" />

        <TextView
            android:id="@+id/tv_mpDetailJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mpSatuan"
            android:layout_toRightOf="@+id/img_satuan"
            android:text="Detail Jenis Produk "
            android:textSize="10sp"
            android:layout_marginLeft="5dp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>