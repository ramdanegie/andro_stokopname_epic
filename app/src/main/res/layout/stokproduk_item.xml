<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:id="@+id/popUp_stok">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        

        <TextView
            android:id="@+id/text_view_namaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_toStartOf="@+id/text_view_qtyReal"
            android:layout_alignParentStart="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/text_view_qtyReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Stok"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/img_kodeProduk"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_turned_in_orange_24dp"
            android:layout_below="@+id/text_view_namaProduk"
            />
        <TextView
            android:id="@+id/text_view_kodeProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode "
            android:textSize="10sp"
            android:layout_toRightOf="@+id/img_kodeProduk"
            android:layout_below="@id/text_view_namaProduk"

         />
        <TextView
            android:id="@+id/text_view_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Barcode"
            android:textSize="10sp" android:visibility="gone"
            android:layout_below="@+id/text_view_kodeProduk"
            />
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_edit_grey_24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_qtyReal"
         />

        <ImageView
            android:id="@+id/img_satuan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_turned_in_orange_24dp"
            android:layout_below="@+id/text_view_kodeProduk"
            />
        <TextView
            android:id="@+id/text_view_satuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satuan "
            android:textSize="10sp"
            android:layout_toRightOf="@+id/img_satuan"
            android:layout_below="@id/text_view_kodeProduk"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>